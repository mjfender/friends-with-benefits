<% if @group.default_group?(@user) %>
<div class="badge">Default Group </div>
<% elsif @group.member?(@user) %>
<%= link_to "Make Default Group", set_default_group_path(@group) %>
<% end %>




<h1> <%= @group.title %> </h1>
<h2> <%= @group.description %> </h2>

<div class="avatar">
<%= image_tag( @group.photo.url(:thumb), 
                class: 'thumbnail') %>
</div>
