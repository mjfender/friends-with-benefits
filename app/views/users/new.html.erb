<h1> Ready to become a Friend with Benefits? </h1>
<%= link_to "Log In, Friend!", '/login' %>

<br></br>

<h2> Sign Up Below </h2>

<%= form_for @user do |f| %>

  <%= f.label :name %>
  <%= f.text_field :name %></br>
  <%= f.label :email %>
  <%= f.text_field :email %></br>
  <%= f.label :password %>
  <%= f.password_field :password %></br>
  <%= f.label :confirm_password %>
  <%= f.password_field :confirm_password %></br>
  <%= f.label :bio %>
  <%= f.text_field :bio %></br>
  <%= f.label :photo %>
  <%= f.file_field :photo %></br>
  <%= f.label :zipcode %>
  <%= f.text_field :zipcode %></br>

  <%= f.submit "Sign Up" %>

<% end %>
