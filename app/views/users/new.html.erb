<%= flash[:notice] %>
<h1> Ready to become a Friend with Benefits? </h1>
<%= link_to "Log In, Friend!", '/login' %>

<br></br>

<h2> Sign Up Below </h2></br>

<%= form_for @user do |f| %>

  <%= f.label "Name: " %>
  <%= f.text_field :name %></br></br>
  <%= f.label "Email: " %>
  <%= f.text_field :email %></br></br>
  <%= f.label "Password: " %>
  <%= f.password_field :password %></br></br>
  <%= f.label "Confirm Password: " %>
  <%= f.password_field :confirm_password %></br></br>
  <%= f.label "Bio: " %></br>
  <%= f.text_area :bio %></br></br></br>
  <%= f.label "Photo: " %>
  <%= f.file_field :avatar %></br></br></br>
  <%= f.label "Zipcode: " %>
  <%= f.text_field :zipcode %></br></br>

<%= f.submit "Sign Up", class: "#{default_button_class}" %>

<% end %></br></br></br>
