<h1><%= "Welcome back #{@user.name}!" %></h1>

<%= link_to "Edit your Account", edit_user_path %></br></br>
<%= button_to "Delete your Account", @user, :method => :delete %></br>
<%= button_to "Log Out", logout_path, :method => :get %></br>


<h2><%= @user.name %></h2>
<%= image_tag @user.avatar.url(:thumb) %>

<h3><%= @user.bio %></h3>

<h2>Proud member of:</h2>
<% @user.groups.each do |group| %>
<%= link_to group.title, group %>
<% end %>

