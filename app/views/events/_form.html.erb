<%= form_for([@need, @event]) do |f| %>

  <%= f.label "Title" %><br>
  <%= f.text_field :title %><br><br>

  <%= f.label "Location" %><br>
  <%= f.text_field :location %><br><br>

  <%= f.label "Description" %><br>
  <%= f.text_area :description %><br><br>

  <%= f.label "Date and Time" %> <br>
  <%= f.datetime_field :time, {class: 'datepicker'} %>

  <%= f.submit nil, class: "#{default_button_class}" %>

<% end %></br>
