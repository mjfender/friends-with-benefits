<%= form_for @need do |f| %>
  <%= f.label "Headline (140 characters)" %><br>
  <%= f.text_area :headline %><br><br>

  <%= f.label :description %><br>
  <%= f.text_area :description %><br><br>

  <%= f.label :expiration, "Expiration Date (Optional)" %><br />
  <%= f.datetime_field :expiration, {class: 'datepicker'} %>

  <p>Where would you like to post your need?</p>

  <%= f.collection_check_boxes(:group_ids, @user.groups, :id, :title,  {:checked => @user.default_group}) %>

  <%= f.submit nil, class: "#{default_button_class}" %>

<% end %></br></br>
